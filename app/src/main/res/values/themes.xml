<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/danzle_logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Danzle</item>
    </style>

    <style name="Base.Theme.Danzle" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textViewStyle">@style/Inter_Regular</item>
        <item name="android:buttonStyle">@style/Inter_Regular</item>
        <item name="android:editTextStyle">@style/Inter_Regular</item>
        <item name="android:radioButtonStyle">@style/Inter_Regular</item>
        <item name="android:checkboxStyle">@style/Inter_Regular</item>

    </style>

    <style name="dialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>

    <style name="Theme.Danzle" parent="Base.Theme.Danzle" />
</resources>